@using NHibernate.Util
@Html.Hidden("Operator", "Equals")

@{
    string type = Model.Filter.Type;
}

<div class="input-prepend errortips" data-co-datetime-picker="datetime">
    <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
    </span>
    <input type="text" name="Value" data-ng-model="@type.Replace(".", string.Empty)" data-ng-change="applyFilter()" data-format="MM/dd/yyyy HH:mm PP"/>
</div>
