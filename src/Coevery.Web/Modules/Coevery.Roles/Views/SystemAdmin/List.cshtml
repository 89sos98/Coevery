<header id="page-title">
    <h1 class="pull-left">@T("Roles") <span>@T("Manage all roles")</span></h1>
</header>
<section id="main-content">
    <div id="page-actions" class="clearfix">
        <div btn-actions>
            <button type="button" class="btn btn-small btn-success" data-ng-click="addRole()"><i class="icon-plus"></i>&nbsp;@T("Add")</button>
            <button type="button" class="btn btn-small " data-ng-click="getAllRoles()"><i class="icon-refresh"></i>&nbsp;@T("Refresh")</button>
            <div class="btn-group" ng-show="selectedItems.length > 0">
                <button class="btn btn-small" data-ng-click="edit(selectedItems[0])" ng-disabled="selectedItems.length > 1">
                    <i class="icon-edit"></i>&nbsp;@T("Edit")
                </button>
                <button class="btn btn-small" co-delete-button confirm-message="You really want to delete this role?" delete-action="delete()">
                    <i class="icon-remove"></i>&nbsp;@T("Delete")
                </button>
            </div>
        </div>
    </div>
    <div class="row-fluid" data-ag-grid="gridOptions" data-ag-grid-name="roleList"> </div>
</section>

<script>
    $(function() {
        $("#main-content").css("margin-top", $("#page-title").outerHeight(true));
        $("#page-actions h1 span").attr("title", $("#page-actions h1 span").html());
    });
</script>