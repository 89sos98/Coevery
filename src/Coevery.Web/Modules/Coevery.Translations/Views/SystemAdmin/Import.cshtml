            <div class="row-fluid">
                <div class="span12">
                    <section class="span12 view-mode">
                        <header>
                            <h5>@T("Manually add translations")</h5>
                        </header>
                        <div class="data-row clearfix">
                            @T("Missing a specific translation? Add it here!")
                        </div>
                        <div class="data-row clearfix">
                            <form id="manualForm" action="@Url.Action("ManualAdd")" method="post">
                                <label>@T("Context (i.e. ~/Core/Common/Module.txt)")</label>
                                <div class="errortips ng-scope">
                                    <input type="text" id="context" name="record.Context" class="span12" placeholder="@T("Context")" required/>
                                </div>
                                <label>@T("Path of the file (i.e. Core/App_Data/Localization/{0}/orchard.core.po)")</label>
                                <div class="errortips ng-scope">
                                    <input type="text" id="path" name="record.Path" class="span12" placeholder="@T("Path")" required/>
                                </div>
                                <label>@T("Translatable string (i.e. 'Translate me!')")</label>
                                <div class="errortips ng-scope">
                                    <input type="text" id="stringKey" name="record.StringKey" class="span12"  placeholder="@T("Translatable string")" required/>
                                </div>
                                <div>
                                    <label>@T("Translation Result")</label>
                                    <select id="culture" style="margin-right: 19px;" name="culture" class="span3">
                                        @foreach (var state in Model.TranslationStates)
                                        { 
                                            <option @if (state.Key == ViewBag.culture)
                                                    {<text>selected="selected"</text>}>@state.Key</option>
                                        }
                                    </select>
                                    <input type="text" id="translationResult" name="translationResult" class="span9"  placeholder="@T("translation result")"/>
                                </div>
                                <br />
                                <button class="btn btn-primary" data-ng-click="manualSubmit()">
                                    @T("Submit")
                                </button>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>
