<header id="page-title" class="ng-scope affix">
    <h1 class="pull-left">@T("Import a translation")  <span></span></h1>
</header>
<section id="main-content" style="margin-top: 47px;" class="ng-scope">
    <div class="row-fluid">
        <div class="span12">
            <div class="row-fluid">
                <div class="span12">
                    <section class="span12 view-mode">
                        <header>
                            <h5>@T("Generate from source")</h5>
                        </header>
                        <div class="data-row clearfix">
                            @T("Developing a module and want to add new translations to the database?")@T("Existing translations will not be altered, only new translatable strings will be added.")
                        </div>
                        <div class="data-row clearfix">
                            <button class="btn btn-primary" data-ng-click="generateFromSource('@Url.Action("FromSource")')">
                                @T("Generate from source")
                            </button>
                        </div>
                    </section>
                </div>
            </div>

