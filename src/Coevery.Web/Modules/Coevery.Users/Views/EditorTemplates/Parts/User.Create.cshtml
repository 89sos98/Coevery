@using System.Web.Mvc.Html
@model Coevery.Users.ViewModels.UserCreateViewModel
<fieldset>
    <legend>@T("User Information")</legend>
    <section class="data-row control-group">
        <label class="control-label required" for="@Html.NameFor(m => m.UserName)">@T("User Name")</label>
        <div class="controls errortips">
            @Html.TextBoxFor(m => m.UserName, new {@class = "span12", required = ""})
        </div>
    </section>
    <section class="data-row control-group">
        <label class="control-label required" for="@Html.NameFor(m => m.Email)">@T("Email")</label>
        <div class="controls errortips">
            @Html.TextBoxFor(m => m.Email, new {@class = "span12", required = ""})
        </div>
    </section>
    <section class="data-row control-group">
        <label class="control-label required" for="@Html.NameFor(m => m.Password)">@T("Password")</label>
        <div class="controls errortips">
            @Html.PasswordFor(m => m.Password, new {@class = "span12", required = ""})
        </div>
    </section>
    <section class="data-row control-group">
        <label class="control-label required" for="@Html.NameFor(m => m.ConfirmPassword)">@T("Confirm Password")</label>
        <div class="controls errortips">
            @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "span12", required = ""})
        </div>
    </section>
</fieldset>