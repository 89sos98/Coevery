                                            <div style="float: left;">
                                                <span class="btn btn-mini" id="input_cloning_add" style=""><i class="icon-plus"></i></span><span>Add another</span>
                                            </div>
                                            <div style="margin-left: 10px; float: left;">

                                                <label class="checkbox">
                                                    <input type="checkbox">
                                                    Save Filter
                                                </label>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <div class="form-actions" style="height: 20px; vertical-align: middle;">
                                        <button type="submit" class="btn btn-primary">Apply</button>
                                        <button class="btn" type="reset">Close</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <section class="span12 widget">
                @Display(Model.ListViewModel)
            </section>

        </div>
    </section>
</section>






