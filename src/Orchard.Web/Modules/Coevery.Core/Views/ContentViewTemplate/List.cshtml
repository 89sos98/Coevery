<section ng-controller="CommonCtrl">

    <section id="main-content">
        <div id="demo-accordion-01" class="accordion" style="margin-top: 10px;">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <div class="accordion-toggle" style="cursor: auto;">
                        <a data-toggle="collapse"
                           onclick="if($('#collapseBtn').hasClass('icon-minus')){$('#collapseBtn').addClass('icon-plus');
     $('#collapseBtn').removeClass('icon-minus');} else{$('#collapseBtn').removeClass('icon-plus');$('#collapseBtn').addClass('icon-minus'); }"
                           data-parent="#demo-accordion-01" href="#collapse-01">
                            <span class="btn"><i id="collapseBtn" class="icon-plus"></i></span>
                        </a>
                        <span>过滤器 总费用 > 7.00, 总费用 > 50.00, 总费用 > 30.00</span>
                        <span><a href="#">Close</a></span>
                    </div>

                </div>
                <div id="collapse-01" class="collapse">
                    <div class="accordion-inner">
                        <div class="widget">
                            <div class="widget-content form-container">
