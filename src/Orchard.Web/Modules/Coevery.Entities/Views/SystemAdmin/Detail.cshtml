@model Coevery.Entities.ViewModels.EditTypeViewModel
<header id="main-header" class="page-header" style="background-image: none; margin-bottom: 0;">
    <h1 style="background-image: none;">Entity Detail <span>show entity detail information</span></h1>
</header>

<section data-spy="affix" data-offset-top="71" class="page-actions">
    <button type="button" class="btn" data-ng-click="exit()">Back</button>
    <button type="button" class="btn btn-primary">Edit</button>
    <button type="button" class="btn">Delete</button>
    <button type="button" class="btn" data-ng-click="listViewDesigner()">List View Designer</button>
    <button type="button" class="btn" data-ng-click="formDesigner()">Form Designer</button>
</section>

<section id="main-content">
    <div class="row-fluid">
        <div class="span12">
            <div>
                @using (Html.BeginFormAntiForgeryPost(new { @class = "form-horizontal" })) {
                    <section class="control-group">
                        <label class="control-label">Entity Id</label>
                        <div class="controls">
                            @Model.Name
                        </div>
                    </section>
                    <section class="control-group">
                        <label class="control-label">Name</label>
                        <div class="controls">
                            <label>
                                @Model.DisplayName</label>
                        </div>
                    </section>
                    <section class="control-group">
                        <label class="control-label">Setting</label>
                        <div class="controls">
                            @{Html.RenderTemplates(Model.Templates); }
                        </div>
                    </section>
                }
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget">
                <ul class="nav nav-tabs">
                    <li data-ng-class="{ active: $detour.includes('EntityDetail.Fields') }"><a href="#/Entities/{{$stateParams.Id}}">Fields</a></li>
                    <li data-ng-class="{ active: $detour.includes('EntityDetail.Relationships') }"><a href="#/Entities/{{$stateParams.Id}}/Relationships">Relationships</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active">
                        <div class="ng-cloak" ui-view ng-animate="'fade'">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(function () {
        $('.page-actions').affix({ offset: { top: 71 } });
    });
</script>
