@model Coevery.Entities.ViewModels.EditTypeViewModel
@*<header id="main-header" class="page-header" style="background-image: none; margin-bottom: 0;">
    <h1 style="background-image: none;">Entity Detail <span>show entity detail information</span></h1>
</header>*@
<section>
    <div id="page-actions">
        <h1 class="pull-left">Entity Detail <span>show entity detail information</span></h1>
    </div>
</section>
<section id="main-content">
    <header id="page-title" class="clearfix">
        <btn-actions>
            <button type="button" class="btn btn-small" data-ng-click="exit()">Back</button>
            <button type="button" class="btn btn-small" data-ng-click="edit()">Edit</button>
            <button type="button" class="btn btn-small">Delete</button>
            <button type="button" class="btn btn-small" data-ng-click="listViewDesigner()">List View Designer</button>
            <button type="button" class="btn btn-small" data-ng-click="formDesigner()">Form Designer</button>
        </btn-actions>
        <div class="min-height"></div>
    </header>
    @*    <div class="row-fluid">
        <div id="page-toolbar">
            <button type="button" class="btn btn-small" data-ng-click="exit()">Back</button>
            <button type="button" class="btn btn-small" data-ng-click="edit()">Edit</button>
            <button type="button" class="btn btn-small">Delete</button>
            <button type="button" class="btn btn-small" data-ng-click="listViewDesigner()">List View Designer</button>
            <button type="button" class="btn btn-small" data-ng-click="formDesigner()">Form Designer</button>
        </div>
    </div>*@

    <div class="row-fluid">
        <div class="span12">
            @*            <div class="widget">
                <div class="widget-content table-container">
                    <table class="table table-detail-view">
                        <tbody>
                            <tr>
                                <th>Name</th>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <th>Display Name</th>
                                <td>@Model.DisplayName</td>
                            </tr>
                            <tr>
                                <th>Setting</th>
                                <td>@{Html.RenderTemplates(Model.Templates); }</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>*@
            <div class="row-fluid">
                <section class="span12 view-mode">
                    <header>
                        <h5>General Info</h5>
                    </header>
                    <div class="data-row clearfix">
                        <span class="title control-label">Name</span>
                        <div class="controls">
                            <span class="control-text">@Model.Name</span>
                        </div>
                    </div>
                    <div class="data-row clearfix">
                        <span class="title control-label">Display Name</span>
                        <div class="controls">
                            <span class="control-text">@Model.DisplayName</span>
                        </div>
                    </div>
                    <div class="data-row clearfix">
                        <span class="title control-label">Setting</span>
                        <div class="controls">
                            <span class="control-text">@{Html.RenderTemplates(Model.Templates); }</span>
                        </div>
                    </div>
                </section>
            </div>

            <div class="row-fluid">
                <div class="mytabs">
                    <ul class="nav nav-tabs">
                        <li data-ng-class="{active: $detour.includes('EntityDetail.Fields')}"><a href="#/Entities/{{$stateParams.Id}}">Fields</a></li>
                        <li data-ng-class="{active: $detour.includes('EntityDetail.Relationships')}"><a href="#/Entities/{{$stateParams.Id}}/Relationships">Relationships</a></li>
                    </ul>
                </div>
                <div class="tab-content">
                    <div class="tab-pane active">
                        <div class="ng-cloak" ui-view>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    $(function () {
        $("#main-content").css("margin-top", $("#page-actions").outerHeight(true));
        $("#page-actions h1 span").attr("title", $("#page-actions h1 span").html());
    });
</script>
