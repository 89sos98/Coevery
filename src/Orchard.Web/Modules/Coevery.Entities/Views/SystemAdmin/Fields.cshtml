<div class="btn-toolbar">
    <button class="btn btn-small btn-success" ng-click="add()">
        <i class="icon-plus"></i>&nbsp;New Field
    </button>
    <button class="btn btn-small" ng-click="gotoDependency()">Field Dependency</button>
    <div class="btn-group" ng-show="mySelections.length > 0">
        <button class="btn btn-small" data-ng-click="edit(mySelections[0].Name)" ng-disabled="mySelections.length > 1">
            <i class="icon-edit"></i>&nbsp;Edit
        </button>
        <button class="btn btn-small" data-ng-click="delete(mySelections[0].Name)">
            <i class="icon-remove"></i>&nbsp;Delete
        </button>
    </div>
</div>
<div class="row-fluid">
    <section class="gridStyle" ng-grid="gridOptions"></section>
</div>

<div id="modalTemplate" class="ng-cloak" ui-view>
</div>

<section id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Confirm</h3>
    </div>
    <div class="modal-body">
        <p>You really want to delete this field?</p>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">No</button>
        <button class="btn btn-primary" ng-click="deleteField()">Yes</button>
    </div>
</section>

