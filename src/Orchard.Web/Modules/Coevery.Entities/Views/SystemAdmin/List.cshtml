<header id="main-header" class="page-header" style="background-image: none; margin-bottom: 0;">
    <h1 id="main-heading" style="background-image: none;">@T("Entities") <span>List of Entities</span></h1>
</header>
<section id="main-content">
    <div class="row-fluid">
        <div id="page-toolbar">
            <button type="button" class="btn btn-success" data-ng-click="add()"><i class="icon-plus"></i>&nbsp;@T("Add")</button>
            <button type="button" class="btn" data-ng-click="generate()"><i class="icos-arrow-down"></i>&nbsp;@T("Generate")</button>
            <button type="button" class="btn" data-ng-click="getAllMetadata()"><i class="icon-refresh"></i>&nbsp;@T("Refresh")</button>>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget">
                <div class="widget-content">
                    <section class="gridStyle" data-ng-grid="gridOptions"></section>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    $(function () {
        $('.toolbar-Container').affix({ offset: { top: 71 } });
    });
</script>
