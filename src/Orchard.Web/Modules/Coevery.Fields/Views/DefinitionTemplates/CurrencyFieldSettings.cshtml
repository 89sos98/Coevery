@model Coevery.Fields.Settings.CurrencyFieldSettings
@using Coevery.Fields.Settings;

<section class="control-group">
    <label class="control-label" for="currencyLength">
        Length
    </label>
    <div class="controls">
        @Html.TextBoxFor(l => l.Length,new { @class = "span12" ,@id = "currencyLength"})
    </div>
</section>

<section class="control-group">
    <label class="control-label" for="currencyDot">
        Decimal Places
    </label>
    <div class="controls">
        @Html.TextBoxFor(d => d.DecimalPlaces,new { @class = "span12" ,@id = "currencyLength"})
    </div>
</section>  

<section class="control-group">
    <label class="control-label" for="currencyDefault">
        Default Value
    </label>
    <div class="controls">
        @Html.TextBoxFor(d => d.DefaultValue,new { @class = "span12" ,@id = "currencyDefault"})
    </div>
</section>
