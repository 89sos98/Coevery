@model Coevery.Fields.Settings.SelectFieldSettings
@using Coevery.Fields.Settings;

<section class="control-group">
    <label class="control-label">
        Item Count
    </label>
    <div class="controls">
        @Html.TextBoxFor(d => d.ItemCount, new { @class = "span12" })
    </div>
</section>

<section class="control-group">
    <label class="control-label">
        Item Labels
    </label>
    <div class="controls">
        @Html.TextAreaFor(m => m.LabelsStr, new { @class = "span12" })
    </div>
</section>

<section class="control-group">
    <label class="control-label">
        Select Count
    </label>
    <div class="controls">
        @Html.TextBoxFor(d => d.SelectCount, new { @class = "span12" })
    </div>
</section>

<section class="control-group">
    <label class="control-label">
        Display Option
    </label>
    <div class="controls">
        <label class="radio">
            @Html.RadioButtonFor(m => m.DisplayOption, Model.DisplayOption == SelectionMode.DropDown, new { @class="" })
            @T(SelectionMode.DropDown.ToString())
        </label>
        <label class="radio">
            @Html.RadioButtonFor(m => m.DisplayOption, Model.DisplayOption == SelectionMode.Radiobutton, new { @class="" })
            @T(SelectionMode.Radiobutton.ToString())
        </label>
        <label class="radio">
            @Html.RadioButtonFor(m => m.DisplayOption, Model.DisplayOption == SelectionMode.Checkbox, new { @class="" })
            @T(SelectionMode.Checkbox.ToString())
        </label>
    </div>
</section>

<section class="control-group">
    <label class="control-label">
        Display Lines
    </label>
    <div class="controls">
        @Html.TextBoxFor(d => d.DisplayLines, new { @class = "span12" })
    </div>
</section>

<section class="control-group">
    <label class="control-label">
        Default Value
    </label>
    <div class="controls">
        @Html.TextBoxFor(d => d.DefaultValue, new { @class = "span12" })
    </div>
</section>
