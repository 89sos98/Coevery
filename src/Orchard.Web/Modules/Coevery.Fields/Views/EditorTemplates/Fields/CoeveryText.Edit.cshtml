@model Coevery.Fields.Fields.CoeveryTextField
@using Orchard.Utility.Extensions;
@using Coevery.Fields.Settings;
@{
    var settings = Model.PartFieldDefinition.Settings.GetModel<CoeveryTextFieldSettings>();
}

<label class="title control-label" for="@Html.FieldIdFor(m => m.Value)">@Model.DisplayName</label>
<div class="control controls">
    <input class="span12" type="text" id="@Html.FieldIdFor(m => m.Value)" name="@Html.FieldNameFor(m => m.Value)" value="@Model.Value"@if (settings.Required) {<text> required</text> } @if (settings.MaxLength > 1) {<text> maxlength="@settings.MaxLength"</text>} />
    @Html.ValidationMessageFor(m => m.Value)
</div>
