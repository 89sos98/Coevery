        string name = Model.ContentField.DisplayName;
    @*<p class="text-field">@T(name): @value</p>*@    
    
    <div class="data-row clearfix">
        <span class="title control-label">@T(name)</span>
        <div class="control controls">
            <span class="control-text">@value</span>
        </div>
    </div>
    }
}
