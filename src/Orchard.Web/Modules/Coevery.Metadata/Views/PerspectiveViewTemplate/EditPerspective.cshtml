@{
    Script.Include("controllers/perspectivedetailcontroller.js");
}
@Display.FootScripts()

<header id="main-header" class="page-header" style="background-image: none; margin-bottom: 0;">
    <h1 style="background-image: none;">Perspective Detail <span>show perspective detail information</span></h1>
</header>

<section ng-controller="PerspectiveDetailCtrl">
    <div class="page-actions">
        <button type="button" class="btn btn-primary">Save</button>
        <button type="button" class="btn" ng-click="exit()">Cancel</button>
    </div>
    <section id="main-content">
        <div class="row-fluid">
            <form class="form-horizontal">
                <section class="control-group">
                    <label class="control-label" for="displayLabel">
                        Display Label
                    </label>
                    <div class="controls">
                        <input type="text" class="span12" id="displayLabel" ng-model="displayLabel">
                    </div>
                </section>
                <section class="control-group">
                    <label class="control-label" for="name">
                        Name
                    </label>
                    <div class="controls">
                        <input type="text" class="span12" id="name" ng-model="name">
                    </div>
                </section>
                <section class="control-group">
                    <label class="control-label" for="description">
                        Description
                    </label>
                    <div class="controls">
                        <textarea class="span12" id="description" ng-model="description"></textarea>
                    </div>
                </section>
            </form>
        </div>
    </section>
</section>

<script type="text/javascript">
    $(function () {
        $('.page-actions').affix({ offset: { top: 71 } });
    });
</script>