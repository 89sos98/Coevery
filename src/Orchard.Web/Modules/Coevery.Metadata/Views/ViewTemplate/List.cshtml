@{
    
    Script.Require("MetadataContext");
    Script.Require("MetadataController");
    
}

@Display.FootScripts()

<header id="main-header" class="page-header" style="background-image: none;margin-bottom: 0;">
    <h1 id="main-heading" style="background-image: none;">@T("Metadata") <span>Metadata List</span></h1>
</header>
<section ng-controller="MetadataCtrl">
    <div class="form-actions" style="margin-top: -10px; padding-top: 10px; padding-left: 40px; padding-bottom: 10px; height: 30px; border-bottom: 1px solid #e5e5e5">
        <button class="btn btn-success" ng-click="add()">
            <i class="icon-plus"></i>&nbsp;@T("Add")
        </button>
        <button class="btn" ng-click="generate()">
            <i class="icos-arrow-down"></i>&nbsp;@T("Generate")
        </button>
        <button class="btn" ng-click="getAllMetadata()">
            <i class="icon-refresh"></i>&nbsp;@T("Refresh")
        </button>
    </div>
    <section id="main-content">
        <div class="row-fluid">
            <section class="span12">
                <section class="gridStyle" ng-grid="gridOptions"></section>
            </section>
        </div>
    </section>
</section>
