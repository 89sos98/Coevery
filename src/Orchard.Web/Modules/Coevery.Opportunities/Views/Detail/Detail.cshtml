<div class="row-fluid">
    <section class="span12 widget">
        <header class="widget-header">
            <span class="title">Detail Page</span>
        </header>
        <section class="widget-content form-container">
            <form name="myForm" class="form-horizontal" ng-submit="save()">
                <section class="control-group">
                    <label class="control-label" for="inputTopic">Topic</label>
                    <div class="controls">
                        <input type="text" class="span12" ng-model="item.Topic" name="topic" id="inputTopic" required>
                        <span class="text-error" ng-show="!myForm.topic.$valid">Required!</span>
                    </div>
                </section>
                <section class="control-group">
                    <label class="control-label" for="inputFirstName">FirstName</label>
                    <div class="controls">
                        <input type="text" class="span12" ng-model="item.FirstName" name="firstName" id="inputFirstName" required>
                        <span class="text-error" ng-show="!myForm.firstName.$valid">Required!</span>
                    </div>
                </section>
                <section class="control-group">
                    <label class="control-label" for="inputLastName">LastName</label>
                    <div class="controls">
                        <input type="text" class="span12" ng-model="item.LastName" name="lastName" id="inputLastName" required>
                        <span class="text-error" ng-show="!myForm.lastName.$valid">Required!</span>
                    </div>
                </section>
                <section class="control-group">
                    <label class="control-label" for="inputStatus">Status</label>
                    <div class="controls">
                        <input type="number" class="span12" ng-change="change()" ng-model="item.StatusCode" id="inputStatus">
                    </div>
                </section>
                <section class="form-actions">
                    <input type="submit" value="Save" class="btn btn-primary" ng-disabled="!myForm.$valid">
                    <input type="button" value="Exit" class="btn" ng-click="exit()"/>
                </section>
            </form>
        </section>
    </section>
</div>