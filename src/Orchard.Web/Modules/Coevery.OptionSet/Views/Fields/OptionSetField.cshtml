@using Orchard.Utility.Extensions;
@{
    var optionItems = (IEnumerable<Coevery.OptionSet.Models.OptionItemPart>)Model.OptionItems;
    string name = @Model.ContentField.DisplayName;
}
@if (Model.Terms.Count > 0) {
<p class="taxonomy-field">
    <span class="name">@name.CamelFriendly():</span> 
    @(new HtmlString( string.Join(", ", optionItems.Select(t => Html.ItemDisplayLink(t.Name, t.ContentItem ).ToString()).ToArray()) ))
</p>
}