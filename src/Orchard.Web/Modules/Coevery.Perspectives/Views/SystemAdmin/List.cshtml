<section>
    <section>
        <div id="page-actions">
            <h1 class="pull-left" style="background-image: none;">Perspective Management <span>An perspective is a group of navigation items that work as a unit to provide functionality</span></h1>
        </div>
    </section>
    <section id="main-content">
        <header id="page-title" class="clearfix">
            <btn-actions>
                <button type="button" class="btn btn-success" data-ng-click="addPerspective()"><i class="icon-plus"></i>&nbsp;@T("Add")</button>
                <button type="button" class="btn" data-ng-click="getAllPerspective()"><i class="icon-refresh"></i>&nbsp;@T("Refresh")</button>
            </btn-actions>
        </header>
        <div class="row-fluid">
            <section class="gridStyle" data-ng-grid="gridOptions"></section>
        </div>
    </section>
</section>
<script>
    $(function () {
        $("#main-content").css("margin-top", $("#page-actions").outerHeight(true));

        var tempWidth = $("#main-content").width();
        var tempWindow = $(window).innerWidth();
        if (tempWindow > 979) {
            tempWidth -= 100;
        } else if (tempWindow > 498) {
            tempWidth -= 60;
        }
        else if (tempWindow > 480) {
            tempWidth -= 0;
        }
        else {
            tempWidth -= 45;
        }
        $("#page-actions").width(tempWidth);
        $("#page-actions h1 span").attr("title", $("#page-actions h1 span").html());
        $(window).resize(function () {
            tempWidth = $("#main-content .ngGrid.gridStyle").width();
            tempWindow = $(window).innerWidth();
            if (tempWindow > 979) {
                tempWidth -= 80;
            } else if (tempWindow > 498) {
                tempWidth -= 40;
            }
            else if (tempWindow > 480) {
                tempWidth -= 0;
            }
            else {
                tempWidth -= 30;
            }
            $("#page-actions").width(tempWidth);
        });
    });
</script>
