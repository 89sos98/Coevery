<header id="page-title">
    <h1 class="pull-left" style="background-image: none;">Perspective Management <span>An perspective is a group of navigation items that work as a unit to provide functionality</span></h1>
</header>
<section id="main-content">
    <div id="page-actions" class="clearfix">
        <btn-actions>
            <button type="button" class="btn btn-small btn-success" data-ng-click="addPerspective()"><i class="icon-plus"></i>&nbsp;@T("Add")</button>
            <button type="button" class="btn btn-small " data-ng-click="getAllPerspective()"><i class="icon-refresh"></i>&nbsp;@T("Refresh")</button>
        </btn-actions>
    </div>
    <div class="row-fluid">
        <section class="gridStyle" data-ng-grid="gridOptions"></section>
    </div>
</section>
<section id="myModalPerspective" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Confirm</h3>
    </div>
    <div class="modal-body">
        <p>You really want to delete this perspective?</p>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">No</button>
        <button class="btn btn-primary" ng-click="deletePerspective()">Yes</button>
    </div>
</section>
<script>
    $(function () {
        $("#main-content").css("margin-top", $("#page-title").outerHeight(true));
        $("#page-actions h1 span").attr("title", $("#page-actions h1 span").html());
    });
</script>
