                    @if (Model.Navigation != null && Model.Navigation.Items.Count > 0)
                    {
                        var menu = Model.Navigation.Items[0];
                        if (menu.Items.Count > 0)
                        {
                            <button class="btn dropdown-toggle" data-toggle="dropdown" style="border: 0; background: rgb(252, 252, 252);">
                                <i style="background-position: center;"></i><span id="FirstMenuText" style="font-size: 25px;">@menu.Items[0].Text.Text</span>
                                <span class="caret"></span>
                            </button>

